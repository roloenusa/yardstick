<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-bar-chart-o"></i> Test Cases</h3>
      </div>
      <div class="panel-body">

        <div class="table-responsive">
          <table class="table table-bordered table-hover table-striped tablesorter">
            <thead>
              <tr>
                <th>Test run</th>
                <th>Testcase</th>
                <th>Result</th>
                <th>Notes</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @test_results.each do |test_result| %>
                <tr>
                  <td><%= test_result.test_run %></td>
                  <td><%= test_result.testcase %></td>
                  <td><%= test_result.result %></td>
                  <td><%= test_result.notes %></td>
                  <td><%= link_to 'Show', test_result %></td>
                  <td><%= link_to 'Edit', edit_test_result_path(test_result) %></td>
                  <td><%= link_to 'Destroy', test_result, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <div class="text-right">
          <%= link_to(new_test_result_path) do %>New Test Results <i class="fa fa-arrow-circle-right"></i><% end %>
        </div>
      </div>
    </div>
  </div>
</div><!-- /.row -->
