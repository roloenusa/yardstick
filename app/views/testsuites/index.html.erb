<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-bar-chart-o"></i> Test Suites</h3>
      </div>
      <div class="panel-body">

        <div class="table-responsive">
          <table class="table table-bordered table-hover table-striped tablesorter">
            <thead>
              <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Description</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @testsuites.each do |testsuite| %>
                <tr>
                  <td><%= testsuite.id %></td>
                  <td><%= testsuite.title %></td>
                  <td><%= testsuite.description %></td>
                  <td><%= link_to 'Show', testsuite %></td>
                  <td><%= link_to 'Edit', edit_testsuite_path(testsuite) %></td>
                  <td><%= link_to 'Destroy', testsuite, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <div class="text-right">
          <%= link_to(new_testsuite_path) do %>New Test Suite <i class="fa fa-arrow-circle-right"></i><% end %>
        </div>
      </div>
    </div>
  </div>
</div><!-- /.row -->
