<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-bar-chart-o"></i> Test Cases</h3>
      </div>
      <div class="panel-body">

        <div class="table-responsive">
          <table class="table table-bordered table-hover table-striped tablesorter" id='test_run_table'>
            <thead>
              <tr>
                <th>ID</th>
                <th>Test Runs</th>
                <th>Created</th>
                <th colspan="4"></th>
              </tr>
            </thead>

            <tbody>
              <% @test_runs.each do |test_run| %>
                <%# Render table row partial for each person object %>
                <%= render partial: 'table_row', locals: {test_run: test_run} %>
              <% end %>
            </tbody>
          </table>
        </div>
        <div class="text-right">
          <%# Added Bootstrap data modal attribute %>
          <%= link_to('#new_test_run_modal', 'data-toggle' => 'modal') do %>New Test Run <i class="fa fa-arrow-circle-right"></i><% end %>
        </div>
      </div>
    </div>
  </div>
</div><!-- /.row -->

<%# Bootstrap modal markup. @see: http://getbootstrap.com/javascript/#modals %>
<div class="modal fade" id="new_test_run_modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Create a New Test Run</h4>
      </div>
      <div class="modal-body">
        <%# Render the new person form (passing modal => true to enable remote => true) %>
        <%= render 'form', modal: true %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
